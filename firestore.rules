rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Any authenticated user can read all names
    match /names/{nameId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.addedBy == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.addedBy == request.auth.uid;
    }

    // Each user can read all scores (needed for combined ranking)
    // but can only write their own
    match /userScores/{scoreId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.data.userId == request.auth.uid;
    }

    // Match records: authenticated users can create and read
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
    }

    // Users collection: each user can read all, write only their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
